<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.csi.bnic">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bnic_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/bnic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.csi.bnic.Activity.ActivitySplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.csi.bnic.Activity.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.csi.bnic.Activity.ActivityCategory"
            android:theme="@style/MotorTheme" />
        <activity
            android:name="com.csi.bnic.Insurance.Motorcycle.ActivityMotorcycleEntry"
            android:theme="@style/MotorTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.csi.bnic.Insurance.Motorcycle.ActivityMotorcycleInfoEntry"
            android:theme="@style/MotorTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.csi.bnic.Insurance.Car.ActivityCarEntry"
            android:theme="@style/MotorTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.csi.bnic.Insurance.Car.ActivityCarInfoEntry"
            android:theme="@style/MotorTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.csi.bnic.Insurance.Fire.ActivityFireInsurance"
            android:theme="@style/FireTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.csi.bnic.Insurance.Marine.ActivityMarineInsurance"
            android:theme="@style/MarineTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.csi.bnic.Insurance.ActivityPreview"
            android:theme="@style/MotorTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.csi.bnic.Insurance.Omp.ActivityOmpEntry"
            android:theme="@style/OmpTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.csi.bnic.Insurance.Omp.ActivityOmpInfoEntry"
            android:theme="@style/OmpTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.csi.bnic.Insurance.Omp.ActivityOmpPreview"
            android:theme="@style/OmpTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name="com.csi.bnic.Insurance.Web.ActivityWeb"/>
    </application>

</manifest>